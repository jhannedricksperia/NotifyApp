<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft Drop Shadow (Multiple layers for blur effect) -->
    <item
        android:left="2dp"
        android:top="4dp"
        android:right="-2dp"
        android:bottom="-4dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="3dp"
        android:right="-1dp"
        android:bottom="-3dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="17dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#15000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- White Stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#96CDF9"
                android:centerColor="#F0EEFD"
                android:endColor="#DFD1FC" />

            <corners android:radius="14dp" />
        </shape>
    </item>

</layer-list>